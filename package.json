{
    "name": "mani",
    "publisher": "anweber",
    "version": "1.0.0",
    "description": "manage projects using mani",
    "displayName": "mani - Project Manager",
    "main": "dist/extension.js",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/AnWeber/vscode-mani"
    },
    "bugs": {
        "url": "https://github.com/AnWeber/vscode-mani/issues"
    },
    "qna": "https://github.com/AnWeber/vscode-mani/discussions",
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "keywords": [
        "git",
        "scm"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "extensionKind": [
        "workspace"
    ],
    "capabilities": {
        "virtualWorkspaces": true,
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "commands": [
            {
                "title": "Open Project Folder",
                "command": "mani.openFolder",
                "category": "mani",
                "icon": "$(folder-library)"
            },
            {
                "title": "Open Project in Workspace",
                "command": "mani.addWorkspaceFolder",
                "category": "mani",
                "icon": "$(add)"
            },
            {
                "title": "Run Task",
                "command": "mani.runTask",
                "category": "mani",
                "icon": "$(play)"
            },
            {
                "title": "Autodiscover Git Projects",
                "command": "mani.autodiscover",
                "shortTitle": "autodiscover",
                "category": "mani",
                "icon": "$(sync)"
            },
            {
                "title": "Init Mani Project Manager",
                "command": "mani.init",
                "shortTitle": "init",
                "category": "mani",
                "icon": "$(new-file)"
            },
            {
                "title": "edit Mani Config",
                "command": "mani.editConfig",
                "shortTitle": "edit",
                "category": "mani",
                "icon": "$(edit)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mani-views",
                    "title": "mani",
                    "icon": "icon.svg"
                }
            ]
        },
        "views": {
            "mani-views": [
                {
                    "id": "maniProjects",
                    "name": "Projects",
                    "visibility": "collapsed"
                }
            ]
        },
        "keybindings": [
            {
                "command": "mani.openFolder",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "mani.autodiscover",
                    "when": "view == maniProjects",
                    "group": "navigation"
                }
            ]
        },
        "configuration": [
            {
                "title": "mani - Project Manager",
                "properties": {
                    "mani.openProjectsInNewFolder": {
                        "type": "boolean",
                        "default": true,
                        "description": "open Projects in new Folder"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run build-web",
        "build": "esbuild ./src/extension.ts --bundle --outdir=dist/ --minify --sourcemap --platform=node --external:vscode --format=cjs",
        "start": "npm run build -- --watch",
        "tsc": " tsc --noEmit",
        "lockfile-lint": "lockfile-lint --path package-lock.json --validate-https --allowed-hosts npm --validate-checksum --validate-integrity",
        "eslint": "eslint src --ext ts --fix",
        "lint": "npm run tsc && npm run lockfile-lint && npm run eslint"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@types/vscode": "1.75.0",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "esbuild": "^0.19.10",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "lockfile-lint": "^4.12.1",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "yaml": "^2.3.4"
    },
    "volta": {
        "node": "20.10.0"
    }
}